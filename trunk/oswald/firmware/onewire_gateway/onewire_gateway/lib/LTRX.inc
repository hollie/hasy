;--------------------------------------------------
; Constants for LTRX API's
;--------------------------------------------------

;mask value for global int reg bit for TX instance
LTRX_TX_INT_MASK:                            equ 0x40
LTRX_TX_INT_REG:                             equ 0x0e1  ;TX interrupt address
LTRX_RX_INT_MASK:                            equ 0x80  ;mask value for global int reg bit for RX instance
LTRX_RX_INT_REG:                             equ 0x0e1  ;RX interrupt address

LTRX_RXBUF_ENABLE:                           equ 1

; Interrupt control masks
LTRX_ENABLE_RX_INT:                          equ 0x01
LTRX_DISABLE_RX_INT:                         equ 0x00
LTRX_ENABLE_TX_INT:                          equ 0x02
LTRX_DISABLE_TX_INT:                         equ 0x00

LTRX_INT_MODE_TX_REG_EMPTY:                  equ 0x00
LTRX_INT_MODE_TX_COMPLETE:                   equ 0x01

LTRX_RX_IGNORE_BELOW:                        equ 0x20
LTRX_RX_BUFFER_SIZE:                         equ 0x10
LTRX_CMD_TERM:                               equ 0xd
LTRX_DELIMITER:                              equ 0x20
LTRX_BACKSPACE_ENABLE:                       equ 0x0

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;       WARNING WARNING WARNING
